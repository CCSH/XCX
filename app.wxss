page {
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'Hiragino Sans GB',
    'Microsoft Yahei', sans-serif;
  background: rgb(245, 245, 245);
}

/* 通用样式 */
/* 状态栏 */
.status-bar {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  background: white;
  z-index: 999;
}

/* 整体居中 */
.center {
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 导航栏按钮 */
.nav-item {
  position: fixed;
  width: 44px;
  height: 44px;
  z-index: 99;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 分割线 */
.divider {
  width: 100%;
  height: 0.5px;
}

/* 间距 */
.space {
  width: 100%;
  height: 10px;
}

/* 文本限制 */
.text-limit {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 删除线 */
.delete-line {
  text-decoration: line-through;
}

/* 内容为空 */
.empty {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 70%;
  font-size: 12px;
  flex-direction: column;
}

/* 滑动右侧菜单 */
van-swipe-cell .right {
  color: white;
  height: 100%;
  width: 80px;
  background: #65b09e;
  font-size: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.right view {
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.right text {
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 底部按钮 */
.bottom-btn {
  margin: 0 50px;
  margin-top: 10px;
  background: #65b09e;
  color: white;
  border-radius: 15px;
  text-align: center;
  line-height: 30px;
  font-size: 14px;
}
